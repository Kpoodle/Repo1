<?xml version="1.0" encoding="UTF-8"?>

<addons>

<addon id="plugin.program.forumkodi"                                                                                                                                    
	   name=" [COLOR tan][B]ForumKodi Wizard[/B][/COLOR]"                                                 
	   version="1.0.1"                                                                                                                                        
	   provider-name="">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>

  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">ForumKodi Wizard</summary>
    <description lang="en">Credit To ForumKodi https://t.me/ForumKodi</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.PoodleWiz" name="PoodleWiz Repository" version="1.0.0" provider-name="Poodle">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="PoodleWiz Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Kpoodle/repo/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Kpoodle/repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Kpoodle/repo/master/zips</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en"></summary>
        <description lang="en"></description>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
        <news></news>
    </extension>
</addon>

</addons>
