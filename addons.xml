
<?xml version="1.0" encoding="UTF-8"?>

<addons>

<addon id="plugin.program.PoodleWizard"                                                                                                                                    
	   name=" [COLOR tan][B]Kodi Poodle Wizard[/B][/COLOR]"                                                 
	   version="1.0.1c"                                                                                                                                        
	   provider-name="">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Kodi Poodle Wizard</summary>
    <description lang="en">Kodi Poodle Wizard https://kpoodle.github.io/repo</description>
    <platform>all</platform>
  </extension>
</addon>
	
<addon id="repository.PoodleWiz" name="Poodle Wizard Repository" version="1.0.0" provider-name="Poodle">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="Poodle Wizard Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Kpoodle/Repo1/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Kpoodle/Repo1/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Kpoodle/Repo1/master/zips</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en"></summary>
        <description lang="en"></description>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
        <news></news>
    </extension>
</addon>
	
</addons>
