<addon id="plugin.program.Poodle19Wizard" name="[COLOR FFFF4500]Poodle 19 Wizard[/COLOR]" version="1.0.0.3a" provider-name="Poodle">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="startup.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR FFFF4500]Poodle 19 Wizard[/COLOR]</summary>
        <description lang="en">[COLOR FFFF4500]Poodle 19 Wizard[/COLOR] offers many maintenance features, selective add-on data saving, and automated build installs.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source></source>
        <news>
2.0.0
 - Kodi 19 ready
 - Initial Commit
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

